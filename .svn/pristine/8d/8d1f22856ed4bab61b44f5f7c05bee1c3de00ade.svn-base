<script>
import headTop from "../../components/head/head";
import footGuide from "../../components/footer/footGuide";
import { Swipe, SwipeItem } from "mint-ui";
import { InfiniteScroll } from "mint-ui";
import { Loadmore } from "mint-ui";
import loading from "../../components/loading/loading";
import { Toast } from "mint-ui";
export default {
  data() {
    return {
      value: "",
      scroll: "",
      goodDataList: "",
      partyList: [],
      packageDataList: [],
      packageClassifyList: "",
      searchCondition: {
        //分页属性
        catId: 0,
        orderBy: 1,
        row: 4,
        page: 1
      },
      allLoaded: false, //是否可以上拉属性，false可以上拉，true为禁止上拉，就是不让往上划加载数据了
      scrollMode: "auto", //移动端弹性滚动效果，touch为弹性滚动，auto是非弹性滚动
      updown: true,
      clickMessage: true,
      isLoading: true,
      carouselFigure: []
    };
  },
  beforeRouteEnter(to, from, next) {
    next(vm => {
      vm.url = from.path;
      if (vm.url == "/myorder") {
        window.location.reload();
      }
    });
  },
  created() {
    this.getCarouselFigure();
    this.getGoodDataList();
    this.getPackageClassifyList();
    this.getPartyList();
  },
  computed: {
    showIcon: function() {
      this.changeShow();
      return this.scroll > 64;
    }
  },
  mounted() {
    window.addEventListener("scroll", this.changeShow);
    this.loadPageList();
  },
  methods: {
    saleActivity() {
      Toast({
        message: "即将上线",
        position: "bottom",
        duration: 1000
      });
    },
    getCarouselFigure() {
      this.$http.post("/api/carousel/list", { useType: 2 }).then(res => {
        this.carouselFigure = res.data.data.rows;
      });
    },
    carouselClick(item) {
      this.$http.get("/api/carousel/click/" + item.id).then(res => {

      });
      return true;
    },
    getPartyList() {
      this.$http
        .post("api/partypkg/partylist", {
          catId: 0,
          recommend: false,
          row: 6,
          page: 1
        })
        .then(res => {
          this.partyList = res.data;
          console.log(res,"eee");
          console.log(res.data,"jjjjjjj");
          if (res.data || res.data.length == 0) {
            this.isLoading = false;
          }
        });
    },
    changeShow() {
      this.scroll = document.body.scrollTop;
    },
    getGoodDataList() {
      this.$http
        .post("api/good/goodlist", {
          catId: 0,
          recommend: true,
          row: 10,
          page: 1
        })
        .then(res => {
          this.goodDataList = res.data.data;
        });
    },
    getPackageClassifyList() {
      this.$http.get("/api/partypkgcat/partycatlist").then(res => {
        this.packageClassifyList = res.data;

          

      });
    },

    MoreGood(id) {
      this.$router.push({ path: "/shoplist", query: { id } });
    },
    goPackageClassify(classifyId) {
      this.$router.push({ path: "/shopmeal", query: { classifyId } });
    },
    // goPackageDetail(id) {
    //   if (this.clickMessage) {
    //     this.$router.push({ path: '/mealdetail', query: { id } })
    //   }else{
    //     return
    //   }
    // },
    goGooddetail(id) {
      if (this.clickMessage) {
        this.$router.push({ path: "/shopdetail", query: { id } });
      }
    },
    goPartyDetail(id) {
      this.$router.push({ path: "/mealdetail", query: { id } });
    },
    loadTop: function() {
      //组件提供的下拉触发方法
      //下拉加载
      this.loadPageList();
      this.$refs.loadmore.onTopLoaded(); // 固定方法，查询完要调用一次，用于重新定位
    },
    loadBottom: function() {
      // 上拉加载
      this.more(); // 上拉触发的分页查询
      this.$refs.loadmore.onBottomLoaded(); // 固定方法，查询完要调用一次，用于重新定位
    },
    loadPageList: function() {
      // 查询数据
      this.$http.post("/api/good/goodlist", this.searchCondition).then(res => {
        this.packageDataList = res.data.data;
        this.$nextTick(function() {
          this.scrollMode = "touch";
        });
      });
    },
    more: function() {
      // 分页查询
      this.clickMessage = false;
      this.searchCondition.page = parseInt(this.searchCondition.page) + 1;
      var self = this;
      setTimeout(function() {
        self.clickMessage = true;
      }, 1500);
      this.$http.post("/api/good/goodlist", this.searchCondition).then(res => {
        if (!res.data.data.length) {
          this.updown = false;
        } else {
          this.packageDataList = this.packageDataList.concat(res.data.data);
        }
      });
    }
  },
  components: {
    footGuide,
    headTop,
    "v-loadmore": Loadmore,
    loading
  },
  filters: {
    two: function(value) {
      if (!value) {
        return "";
      }
      return value.toFixed(2);
    },
    dot: function(value) {
      if (!value) {
        return value;
      } else {
        if (value.length > 2) {
          return value.slice(0, 2) + "...";
        } else {
          return value;
        }
      }
    }
  }
};
</script>

