<script>
import { Swipe, SwipeItem } from 'mint-ui';
import { Popup } from 'mint-ui';
import headTop from '../../components/head/head';
import {mapMutations} from 'vuex'
export default {
    data() {
        return {
           
            popupVisible: false,//弹出层
            successTip:false,//提示添加成功信息
            stockShow:false,//库存显示
            goodsDetail: '',//商品详情
            detailContent: '',//商品详情内容区
            goodsChoose: '',//商品选择
            colorChoose: '',//商品颜色选择
            sizeChoose: '',//商品尺码选择
            iscolorindex: '',
            issizeindex: '',
            value:1,
            colormsg:'',
            sizemsg:''
        }
    },
    created() {
        this.$http.get('/api/good/goodinfo?Id=1').then(res => {
            console.log(res);
            this.goodsDetail = res.data;
            this.detailContent = res.data.goodContent;
            this.goodsChoose = JSON.parse(res.data.goodSkuMemo);
            console.log(this.goodsChoose[0]);
            this.colorChoose = this.goodsChoose[0];
            this.sizeChoose = this.goodsChoose[1];
        }).catch(err =>{
            console.log(err);
        })
        


        

    },
    components: {
        headTop
    },
    methods: {
        handleClose() {

        },
        handleClick: function () {
            this.popupVisible = true
        },
        changeChoose: function (index) {
            console.log(index);
            this.iscolorindex = index;
           this.colormsg = this.colorChoose.prop_vals[index].Val_Name;
           

        },
        changeSize: function (index) {
            this.issizeindex = index;
            this.sizemsg = this.sizeChoose.prop_vals[index].Val_Name;
        },
        reduce() {
            if (this.value > 0) {
                this.value--;
            }

        },
        add() {
            if (this.value < 10) {
                this.value++;
            }

        },
        addCart(){
            this.popupVisible=true;
//this.addCart(参数)
        },
        addToCart(){
            if(this.colormsg && this.sizemsg){
                this.popupVisible=false;
                this.successTip=true;
                var self=this;
          
                 setTimeout(function () {  
                    self.successTip = false 
                    }, 1000)  
            }
            
        },
        ...mapMutations({
            addCart:'ADD_CART'
        })
    },
    filters: {
        //保留两位小数点
        two: function (value) {

            if (!value) { return '' };
            return value.toFixed(2);
        }

    }
}    
</script>


