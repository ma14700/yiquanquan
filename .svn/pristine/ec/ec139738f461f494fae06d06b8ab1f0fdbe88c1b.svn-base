<script>
import headTop from '../../components/head/head';
import { Popup } from 'mint-ui';
import { Navbar, TabItem } from 'mint-ui';
import { Picker } from 'mint-ui';
import datepicker from 'vue-date'
import { MessageBox } from 'mint-ui';
import { mapState, mapMutations } from 'vuex'
export default {
    data() {
        return {
            popupVisible: false,
            selected: '1',
            index: '',
            modal: '',
            modal1: '',
            cityId: '',
            slots: [
                {
                    values: [
                        '男',
                        '女'
                    ]
                }
            ],
            sex: '',
            sexnum: '',
            date: '',
            hours: [
                "10:00", "11:00", "12:00", "13:00", "14:00", "15:00", "16:00", "17:00", "18:00", "19:00", "20:00", "21:00"
            ],
            isChooseHours: '0',
            success: true,//确认订单
            place: '',//预约时间
            phone: '',//联系电话
            BuyerMessage: '',//用户留言
            alertMsg: '',//提示填写电话等信息
            showAlert: false,
            //
            goodsData: {},//商品数据
            OrderHaveVenues: 1,//是否有场地
            orderedCity: '',//可预约城市列表
            onlyone: true,
        }
    },
    components: {
        headTop,
        datepicker
    },
    mounted: function() {

    },
    created() {
        this.getGoodsData();
        this.getNowDate();

    },
    computed: {
        ...mapState([
            'settleAccounts', 'settlePackageAccounts'
        ]),

    },
    watch: {
        selected(a, b) {
            console.log(a, b)
        }
    },
    methods: {

        ...mapMutations([
            'SETTLE_ACCOUNTS', 'GIT_SETTLE_ACCOUNTS', 'SETTLE_PACKAGE_ACCOUNTS', 'GIT_SETTLE_PACKAGE_ACCOUNTS'
        ]),
        //获取当前日期
        getNowDate() {
            let now = new Date();
            let month = now.getMonth() + 1;
            let day = now.getDate();
            if (month < 10 && day < 10) {
                month = '0' + month;
                day = '0' + day;
            }
            this.date = now.getFullYear() + "-" + month + '-' + day
        },

        //
        getGoodsData() {
            this.GIT_SETTLE_ACCOUNTS();
            this.goodsData = this.settleAccounts[this.$route.query.id][this.$route.query.id];
            console.log(this.goodsData)

        },
        // 点击显示对应的弹出层
        handleClick: function(param) {
            this.modal = param;
            this.popupVisible = true;

            if (this.onlyone) {
                this.$http.get('api/city/list').then(res => {
                    console.log(res);
                    this.orderedCity = res.data;
                })
                this.onlyone = false;
            }

        },
        // 选择城市
        // choosePlace: function(param) {
        //     this.modal = param;

        // },
        // 选择具体城市
        chooseCityClick: function(param, index) {
            this.modal1 = param.mergerName;
            this.cityId = index;
            this.popupVisible = false;
        },
        // 选择性别
        onValuesChange(picker, values) {
            this.sex = values[0];
            if (this.sex == '男') {
                this.sexnum = 1;
            } else {
                this.sexnum = 0;
            }
            console.log(this.sex)
        },
        handlepay: function() {

        },
        //选择小时
        chooseHours(index) {
            this.isChooseHours = index;
        },
        //确认时间
        comfirmTime() {
            this.popupVisible = false;
            this.place = this.date + ' ' + this.hours[this.isChooseHours] + ':00';


        },
        // 确认支付
        confirmPay(result) {
            let params = {
                "ReceiveId": '',
                "BuyerMessage": this.BuyerMessage,
                "OrderType": 2,
                "OrderToSex": this.sexnum,
                "OrderHaveVenues": this.selected,
                "OrderPromiseMoney": '',
                "OrderPormiseDate": this.place,
                "OrderCity": this.modal1,
                "OrderAreaId": this.orderedCity[this.cityId].id,
                "OrderPersions": '10-15人',
                "OrderTimeLong": '10小时',
                "PartyId": 3,
                "TempLists": [],
                "AddrMemo":'jjjjj',
                "AddrName":'aaa',
                "AddrMobile":'15039112386'
            };

            this.$http.post('api/order/create',params,{
                transformRequest:[ function(params) {
                let ret = ''
                for (let it in params) {
                    ret += encodeURIComponent(it) + '=' + encodeURIComponent(params[it]) + '&'
                }
                return ret
            }]

            }, {
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                }
            ).then(res => {
                console.log(res);
            })

            // 验证正则还没写
            if (!this.place || !this.phone) {
                if (!this.place) {
                    this.alertMsg = '请选择预约时间';
                } else if (!this.phone) {
                    this.alertMsg = '请填写联系电话';
                }
                this.showAlert = true;
                var self = this;
                setTimeout(function() {
                    self.showAlert = false
                }, 1000);
            } else {




                //
                this.success = false;
                if (this.success) {
                    MessageBox({
                        title: '支付成功',
                        message: '您的订单会尽快给您处理',
                        confirmButtonText: '完成'
                    }).alert().then(action => {

                    });

                } else {
                    MessageBox({
                        title: '支付失败',
                        message: '支付遇到问题，请尝试重新支付',
                        showCancelButton: true,
                        confirmButtonText: '重新支付'
                    }).confirm().then(action => {

                    });

                }
            }




        },


    },
    filters: {
        //保留两位小数点
        two: function(value) {

            if (!value) { return '' };
            return '¥' + value.toFixed(2);
        }

    }
}
</script>


