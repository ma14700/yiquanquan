<script>
import { Header } from 'mint-ui';
import { Search } from 'mint-ui';
import { Navbar, TabItem } from 'mint-ui';
import { mapState, mapMutations } from 'vuex';
import { setStore, getStore, removeStore } from "../../config/mUtils";
import loading from '../../components/loading/loading';
export default {
  data() {
    return {
      index: '3',
      selected: '3',
      value: '',
      scroll: '',
      goodsClassify: [],
      goodsDetailClassify: [],
      isLoading: true,
    }
  },
  beforeRouteEnter(to, from, next) {

        next(vm => {
            vm.url = from.path;
            console.log(vm.url);
            if (vm.url == '/shopstore' || vm.url == '/' || vm.url == '/author') {
                //from商城首页 为第一个
                vm.index = -1;
            } else if(vm.url == '/shoplist'){
                var sel = getStore("selected");
                vm.index = parseInt(sel) ;
                console.log(vm.index);
            }else{
                vm.index = -1;
                console.log(vm.url,"other")
            }
        })
    },
  created() {
    this.$http.get('/api/goodCat/catlist').then(res => {
      this.goodsClassify = res.data;
      if(res.data){
      this.isLoading = false;
    }
    })
    // this.index = -1;
    
  },
  components: {
    loading
  },
  computed: {
    showIcon: function() {
      this.changeShow();
      return this.scroll > 65;
    }

  },
  mounted() {
    window.addEventListener('scroll', this.changeShow)
  },
  methods: {
    storageIndex(i){
        setStore("selected",i)

    },
    goSearch() {
      this.$router.push({ path: '/Hsearch' })
    },
    back() {
      this.$router.back()
    },
    handleClose() {

    },
    changeShow() {
      this.scroll = document.body.scrollTop;
    },
    goShopList(geohash) {
      let id = geohash
      this.$router.push({ path: '/shoplist', query: { id } })
    }
  }
}
</script>


