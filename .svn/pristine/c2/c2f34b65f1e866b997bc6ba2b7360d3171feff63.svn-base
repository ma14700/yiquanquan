<script>
import { Navbar, TabItem } from 'mint-ui';
import { Popup } from 'mint-ui';
import { Toast } from 'mint-ui';
export default {
    data() {
        return {
            selected: "0",
            showInput: false,
            mycoupons: [],
            newCoupons: [],
            usedCoupons: [],
            invalidCoupons: [],
            token: '',
        }
    },
    created() {
        this.coupons();

    },
    computed: {
        statusText: function() {
            let text = '';
            let _this = this;
            this.mycoupons.forEach(function(item) {
                if (item.usedDate == null) {
                    if(_this.compareDate(item.invalidDate, _this.nowDate)){
                        text = '已过期'
                    }else{
                        text = '未使用';
                    }
                } else {
                    text = '已使用'
                }
            })
            return text
        },
        nowDate: function() {
            var myDate = new Date();
            var year = myDate.getFullYear();
            var month = myDate.getMonth() + 1;
            var day = myDate.getDate();
            var date = year + '-' + month + '-' + day;
            return date
        }
    },
    methods: {
        coupons() {
            this.$http.get('/api/coupon/list').then(res => {
                console.log(res.data.data);
                this.mycoupons = res.data.data;
                for (let i = 0; i < this.mycoupons.length; i++) {
                    if (this.mycoupons[i].usedDate == null) {
                        if (this.compareDate(this.mycoupons[i].invalidDate, this.nowDate)) {
                            this.invalidCoupons[i] = this.mycoupons[i]//已过期
                        } else {
                            this.newCoupons[i] = this.mycoupons[i]//未使用
                        }
                    } else {
                        this.usedCoupons[i] = this.mycoupons[i]//已使用
                    }
                }
                // console.log(this.mycoupons, '全部')
                // console.log(this.newCoupons, '未使用')
                // console.log(this.usedCoupons, '已使用')
                // console.log(this.invalidCoupons, '已失效')
            });

        },
        failIn() {
            this.showInput = !this.showInput
        },
        compareDate(invalidDate, nowDate) {
            var arrInvalid = invalidDate.split("-");
            var invalidTime = new Date(arrInvalid[0], arrInvalid[1], arrInvalid[2]);
            var invalidTimes = invalidTime.getTime();
            var arrNow = nowDate.split("-");
            var nowTime = new Date(arrNow[0], arrNow[1], arrNow[2]);
            var nowTimes = nowTime.getTime();
            if (invalidTimes < nowTimes) {
                return true;//已过期
            }
            return false;
        },
        exchange() {
            if (this.token.length != 16) {
                Toast({
                    message: '请输入16位的优惠码哦',
                    position: 'top',
                    duration: 1.5e3
                });
            } else {
                this.$http.get('/api/coupon/entering/' + this.token).then(res => {
                    if (res.data.success) {
                        Toast({
                            message: '兑换成功',
                            position: 'middle',
                            duration: 1.5e3
                        });
                        this.token = '';
                    } else {
                        alert(res.data.message);
                    }
                    this.$nextTick(function() {
                        this.coupons()
                    })
                })
            }



        }

    },
    filters: {
        dot: function(value) {
            if (!value) {
                return value
            } else {
                if (value.length > 10) {
                    return value.slice(0, 10) + '...'
                } else {
                    return value
                }
            }
        },
        discount: function(value) {
            if (!value) { return '' };
            var newValue = (value * 0.01).toFixed(2);
            return newValue
        },
        valid(value) {
            var newValue = value.split("T")[0];
            return newValue
        }
    }
}
</script>

