<script>
export default {
  data(){
      return{
        grabList:[]
      }
  },
  created(){
    this.angelData();
  },
  methods:{
    angelData(){
        this.$http.get('/api/planner/list?number=100').then(res=>{
        this.grabList = res.data.data.rows;
        this.grabList.forEach(function(good){
            good.spheres = good.spheres.split(",");
        })
    })
    }
  },
  filters: {
        
        dot: function(value) {
            if (!value) {
                return value
            } else {
                if (value.length > 35) {
                    return value.slice(0, 35) + '...'
                } else {
                    return value
                }
            }
        }
    }
}
</script>

