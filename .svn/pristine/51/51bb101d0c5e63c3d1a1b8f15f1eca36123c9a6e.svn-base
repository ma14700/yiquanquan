<script>
import { Lazyload } from 'mint-ui';
import { Navbar, TabItem } from 'mint-ui';
export default {
    data() {
        return {
            selected: '0',
            myorder: [],
            waitPay: [],
            waitGoods: [],
            waitReceive: [],
            waitEvaluated: [],
        }
    },
    beforeMount() {

    },
    created() {
        
        this.getMyorder();
    },
    mounted() {
        this.selected = this.$route.query.selected;
    },
    watch: {
        '$route'(to, from) {
            console.log(this.$route.query.selected,1)
            this.selected = this.$route.query.selected;
        },
        selected() {
            return this.getList();
        }
    },
    methods: {
        goDetail(item, group) {
            let url = '/mealdetail';
            let id = item.itemGoodId;
            if (group.orderType == 1) {
                url = '/mealdetail'
            } else {
                url = '/shopdetail'
            }
            this.$router.push({ path: url, query: { id } })
        },
        goPay(group) {
            let orderId = group.id
            this.$router.push({ path: '/center/orderpay', query: { orderId } })
        },
        getMyorder() {
            this.$http.get('/api/order/list?status=' + this.selected + '&page=0&rows=1000').then(res => {
                this.myorder = res.data;
            })
        },
        getList() {
            if (this.selected == 1) {
                this.$http.get('/api/order/list?status=' + this.selected + ',10&page=0&rows=1000').then(res => {
                    this.waitPay = res.data;
                })
            } else {
                this.$http.get('/api/order/list?status=' + this.selected + '&page=0&rows=1000').then(res => {
                    if (this.selected == 2) {
                        this.waitGoods = res.data;
                    } else if (this.selected == 7) {
                        this.waitReceive = res.data;
                    }
                    console.log(res.data,1)
                })
            }

        }
    },
    filters: {
        //保留两位小数点
        two: function(value) {
            if (!value) { return '' };
            return value.toFixed(2);
        },
        dot: function(value) {
            if (value.length > 18) {
                return value.slice(0, 18) + '...'
            } else {
                return value
            }

        }
    }
}
</script>

