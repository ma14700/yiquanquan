<script>
import { Header } from 'mint-ui';
import { Navbar, TabItem } from 'mint-ui';
import { Loadmore } from 'mint-ui';
import headTop from '../../components/head/head';
import footGuide from '../../components/footer/footGuide';
import { mapState, mapMutations } from 'vuex';
import loading from '../../components/loading/loading';
export default {
    data() {
        return {
            star: true,
            selected: '1',
            value: '',
            test: true,
            scroll: '',
            arrowshow: true,
            // transitionName: 'ease'
            catid: '',
            shopList: [],//商品列表,
            countlist: [],
            hotlist: [],
            priceuplist: [],
            pricedownlist: [],
            pageHeight: document.body.clientHeight, //页面一屏的高度
            searchCondition: {  //分页属性
                catId: this.$route.query.id,
                recommend: true,
                row:10,
                page: 1,
                name:this.$route.query.value,
                orderBy: 1,
            },
            allLoaded: false, //是否可以上拉属性，false可以上拉，true为禁止上拉，就是不让往上划加载数据了
            scrollMode: "auto", //移动端弹性滚动效果，touch为弹性滚动，auto是非弹性滚动
            updown: true,
            clickMessage: true,
            isLoading: true,
        }
    },
    created() {
    },
    components: {
        footGuide,
        'v-loadmore': Loadmore,
        loading,
    },
    computed: {
        ...mapState([
            'addMoreGood'
        ]),
        showIcon: function() {
            this.changeShow();
            return this.scroll > 65;
        },
        // 根据销量进行排序
        countList: function() {
            let arr = this.shopList;
            let arr2 = this.countlist;
            for (let i = 0; i < arr.length; i++) {
                arr2[i] = arr[i]
            }
            return arr2.sort(function(a, b) {
                return b.goodVirtualSales - a.goodVirtualSales;//降序
            })
        },
        //根据人气进行排序
        hotList: function() {
            let arr = this.shopList;
            let arr2 = this.hotlist;
            for (let i = 0; i < arr.length; i++) {
                arr2[i] = arr[i]
            }
            return arr2.sort(function(a, b) {
                return b.hot - a.hot;//降序
            })
        },
        //根据价格进行排序
        priceList: function() {
            let arr = this.shopList;
            let arr2 = this.pricedownlist;
            let arr3 = this.priceuplist;
            for (let i = 0; i < arr.length; i++) {
                arr2[i] = arr[i];
                arr3[i] = arr[i];
            }
            if (this.arrowshow) {
                return arr3.sort(function(a, b) {
                    return a.goodSalePrice - b.goodSalePrice;//升序，价格由低到高
                })
            } else {
                return arr2.sort(function(a, b) {
                    return b.goodSalePrice - a.goodSalePrice;//降序    价格由高到低   s
                })
            }
        }
    },
    mounted() {
        window.addEventListener('scroll', this.changeShow);
        this.loadPageList();

    },
    methods: {
        //列表，块状图标转换
        changeIcon: function() {
            this.test = !this.test;
        },
        changeShow() {

            if(document.documentElement&&document.documentElement.scrollTop){
                 this.scroll = document.documentElement.scrollTop;
            }else if(document.body){
                this.scroll = document.body.scrollTop;
            }
        },
        //返回顶部
        gotop() {
            if (document.body.scrollTop > 65) {
                document.body.scrollTop = 0;
            }
        },
        //
        homesearch() {
            this.$router.push({ path: '/Hsearch' })
        },
        //价格排序箭头
        arrowSelected() {
            this.arrowshow = !this.arrowshow;
        },
        goShopdetail(id) {
            if (this.clickMessage) {
                this.$router.push({ path: '/shopdetail', query: { id } })
            }

        },
        loadTop: function() { //组件提供的下拉触发方法
            //下拉加载
            this.loadPageList();
            this.$refs.loadmore.onTopLoaded();// 固定方法，查询完要调用一次，用于重新定位
        },
        loadBottom: function() {
            // 上拉加载
            this.more();// 上拉触发的分页查询
            this.$refs.loadmore.onBottomLoaded();// 固定方法，查询完要调用一次，用于重新定位
        },
        loadPageList: function() {
            // 查询数据
            this.$http.post('/api/good/goodlist', this.searchCondition).then(res => {
                this.shopList = res.data.data;
                if(res.data.data){
                    this.isLoading = false;
                }
                this.$nextTick(function() {
                    this.scrollMode = "touch";
                });
            })
        },
        more: function() {
            // 分页查询

            this.clickMessage = false;
            this.searchCondition.page = parseInt(this.searchCondition.page) + 1;
            var self = this;
            setTimeout(function() {
                self.clickMessage = true
            }, 1500);
            this.$http.post('/api/good/goodlist', this.searchCondition).then(res => {
                if (res.data.data.length == 0) {
                    this.updown = false
                } else {
                    this.shopList = this.shopList.concat(res.data.data);
                }
            })
        },
    },
    filters: {
        //保留两位小数点
        two: function(value) {
            if (!value) { return '' };
            return value.toFixed(2);
        },
        textFilter: function(value, myString) {
            // if(this.$refs.title.style.height>){

            // }
            let arr = this.$refs.title;
            arr.forEach(function(item, index) {
                if (item.style.height > 1) {

                }
            })
            return value + myString
        }

    }
}
</script>


